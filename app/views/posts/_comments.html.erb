<ul>
<% commentable.comments.each do |comment| %>
	<li>
		<div>
			<%= comment.title %>
		</div>
		<div>
			<%= comment.message %>
		</div>
		<div>
			<i>
			<b>
			posted by <%= comment.author_name %>
			</b>
			</i>
		</div>
	</li>
<% end %>
</ul>

<%= render 'comments/form', commentable: commentable %>
